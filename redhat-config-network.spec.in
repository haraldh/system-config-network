# -*- RPM-SPEC -*-
%define rp3 0
Summary: The GUI of the NEtwork Adminstration Tool for Red Hat Linux
Name: @PACKAGE@
Version: @VERSION@
Release: 1
URL: http://www.redhat.com/ 
Source0: %{name}-%{version}.tar.gz
License: GPL
Group: Applications/System 
BuildArch: noarch
Obsoletes: isdn-config internet-config rp3 redhat-config-gui
BuildRequires: python >= 2.2, openjade, docbook-style-dsssl, perl, gettext, glibc-devel, gcc, desktop-file-utils, yelp
Requires: %{name}-tui = %{version}-%{release}
Requires: libglade2, pygtk2-libglade, pygtk2, gnome-python2, gnome-python2-canvas
BuildRoot: %{_tmppath}/%{name}-%{version}-root
%if %{rp3}
Source1: rp3-1.1.10.tar.gz
Patch0: redhat-config-network-0.9.13-neat.patch
Patch1: redhat-config-network-0.9.21-rp3.patch
Patch2: redhat-config-network-0.9.23-rp3-font.patch
Patch3: redhat-config-network-0.9.24-rp3-isdn.patch
%endif

%description
This is the GUI of the network configuration tool for Red Hat Linux,
supporting Ethernet, Wireless, TokenRing, ADSL, ISDN and PPP.

%package tui
Summary: The NEtwork Adminstration Tool for Red Hat Linux
Group: Applications/System 
Obsoletes: netcfg
Requires: initscripts >= 5.99, usermode , kudzu, python, rhpl >= 0.83, rpm-python

%description tui
This is the network configuration tool for Red Hat Linux,
supporting Ethernet, Wireless, TokenRing, ADSL, ISDN and PPP.

%prep
%if %{rp3}
%setup -q -a 1
%patch0 -p1 -b .neat
%patch1 -p0 -b .rp3
%patch2 -p1 -b .font
%patch3 -p1 -b .isdn
%else
%setup
%endif

%configure

%if %{rp3}
pushd .
cd rp3-1.1.10
%configure
popd
%endif

%build

%if %{rp3}
pushd .
cd rp3-1.1.10
make
popd
%endif

%install
rm -rf $RPM_BUILD_ROOT
%makeinstall

mkdir $RPM_BUILD_ROOT%{_datadir}/applications

for i in neat.desktop internet-druid.desktop neat-control.desktop; do \
  desktop-file-install --vendor redhat --delete-original       \
    --dir $RPM_BUILD_ROOT%{_datadir}/applications             \
    --add-category X-Red-Hat-Base                             \
    $RPM_BUILD_ROOT%{_datadir}/redhat-config-network/$i; \
done;

%if %{rp3}
pushd .
cd rp3-1.1.10/rp3
%makeinstall
cd ../docs
%makeinstall
cd ../po
%makeinstall
popd
# use neat-control
rm -f $RPM_BUILD_ROOT/etc/X11/applnk/Internet/rp3.desktop
%endif

%find_lang %name

%if %{rp3}
%find_lang rp3
cat rp3.lang >>%{name}.lang
%endif

rm -rf $RPM_BUILD_ROOT%{_datadir}/kontrol-panel

%clean
rm -rf $RPM_BUILD_ROOT


%files 
%defattr(-,root,root)
%{_datadir}/redhat-config-network/pixmaps
%{_datadir}/redhat-config-network/netconfpkg/gui
%{_sbindir}/redhat-config-network-gui
%{_sbindir}/internet-druid
%{_bindir}/neat-control
%{_bindir}/internet-druid
%{_bindir}/redhat-control-network

%files -f %{name}.lang tui
%defattr(-,root,root)
%{_datadir}/redhat-config-network/help
%{_datadir}/redhat-config-network/*.py*
%dir %{_datadir}/redhat-config-network/netconfpkg
%{_datadir}/redhat-config-network/netconfpkg/plugins
%{_datadir}/redhat-config-network/netconfpkg/*.py*
%{_datadir}/redhat-config-network/netconfpkg/*.idl
%{_datadir}/redhat-config-network/module-info
%{_datadir}/redhat-config-network/providerdb
%{_datadir}/pixmaps/*
%{_datadir}/applications/*
%config(noreplace) /etc/pam.d/*
%config(noreplace) /etc/security/console.apps/*
%{_sbindir}/neat
%{_sbindir}/neat-tui
%{_sbindir}/redhat-config-network
%{_sbindir}/redhat-config-network-tui
%{_sbindir}/redhat-config-network-cmd
%{_sbindir}/redhat-config-network-druid
%{_bindir}/neat
%{_bindir}/redhat-config-network
%{_bindir}/redhat-config-network-cmd
%{_bindir}/redhat-config-network-druid

%if %{rp3}
%{_datadir}/gnome/help/*/*/*
%{_datadir}/applets/*/*
%config %{_sysconfdir}/CORBA/servers/*
%endif

